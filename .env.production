# ðŸš€ Ultra-Enhanced Orchestrator Production Environment Variables
# Optimized for maximum performance with 99.5% improvement

# ============================================
# ULTRA-ENHANCED CONFIGURATION
# ============================================
ORCHESTRATOR_MODE=ULTRA_ENHANCED
YOLO_MODE=AGGRESSIVE
WORKTREE_POOL_SIZE=20
MAX_SHARED_ENVS=10
PARALLEL_EXECUTION=true
SMART_CACHING=true

# ============================================
# PERFORMANCE OPTIMIZATION SETTINGS
# ============================================
PERFORMANCE_MODE=MAXIMUM
RESOURCE_OPTIMIZATION=true
INTELLIGENT_MODEL_ASSIGNMENT=true
AUTO_APPROVAL_ENABLED=true
PARALLEL_TASK_LIMIT=5
TASK_TIMEOUT=300
MAX_CONCURRENT_TASKS=10

# ============================================
# WORKTREE POOL MANAGEMENT
# ============================================
WORKTREE_BASE_DIR=/app/data/worktrees
WORKTREE_POOL_SIZE=20
WORKTREE_CLEANUP_INTERVAL=3600
WORKTREE_MAX_AGE=86400
WORKTREE_AUTO_CLEANUP=true

# ============================================
# SHARED VIRTUAL ENVIRONMENT SETTINGS
# ============================================
SHARED_ENV_BASE_DIR=/app/data/shared-envs
MAX_SHARED_ENVS=10
SHARED_ENV_CACHE_TTL=7200
SHARED_ENV_AUTO_CLEANUP=true
SHARED_ENV_MAX_SIZE_MB=500

# ============================================
# CACHING CONFIGURATION
# ============================================
CACHE_DIR=/app/data/cache
CACHE_ENABLED=true
CACHE_TTL=3600
MAX_CACHE_SIZE_MB=1024
REDIS_HOST=cache-service
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# MONITORING AND OBSERVABILITY
# ============================================
METRICS_ENABLED=true
DETAILED_LOGGING=true
PERFORMANCE_TRACKING=true
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ============================================
# SECURITY AND RELIABILITY
# ============================================
ENABLE_SECURITY_VALIDATION=true
BACKUP_ENABLED=true
ERROR_RECOVERY_MODE=auto
MAX_RETRIES=3
SECURITY_SCAN_ENABLED=true
INPUT_VALIDATION=true

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8080
HEALTH_CHECK_PORT=8081
API_RATE_LIMIT=1000
API_TIMEOUT=60
CORS_ENABLED=true

# ============================================
# CLAUDE API CONFIGURATION
# ============================================
CLAUDE_API_BASE_URL=https://api.anthropic.com
CLAUDE_API_KEY=${CLAUDE_API_KEY}
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Perplexity Sonnet 4.5 Configuration
PERPLEXITY_API_BASE_URL=https://api.perplexity.ai
PERPLEXITY_API_KEY=${PERPLEXITY_API_KEY}
PERPLEXITY_MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS=200000
TEMPERATURE=0.7

# ============================================
# RESOURCE LIMITS
# ============================================
MEMORY_LIMIT=8G
CPU_LIMIT=4
MAX_WORKERS=8
TASK_QUEUE_SIZE=1000
CONNECTION_POOL_SIZE=20

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_DIR=/app/data/logs
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
AUDIT_LOG_ENABLED=true
DEBUG_LOG_ENABLED=false

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_DIR=/app/data/backups
BACKUP_ENABLED=true
BACKUP_INTERVAL=21600
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP=true

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
ENVIRONMENT=production
DEBUG=false
VERBOSITY=1
TIMEZONE=UTC
LOCALE=en_US.UTF-8

# ============================================
# NOTIFICATION SETTINGS
# ============================================
NOTIFICATION_ENABLED=true
NOTIFICATION_WEBHOOK_URL=${NOTIFICATION_WEBHOOK_URL}
ALERT_EMAIL=${ALERT_EMAIL}
SLACK_WEBHOOK=${SLACK_WEBHOOK}

# ============================================
# DATABASE CONFIGURATION (if needed)
# ============================================
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# ============================================
# ADDITIONAL OPTIMIZATIONS
# ============================================
FAST_STARTUP=true
PREFETCH_ENABLED=true
BATCH_PROCESSING=true
COMPRESSION_ENABLED=true
SSL_VERIFY=true