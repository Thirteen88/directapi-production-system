{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/AggregatedResult.json",
  "title": "AggregatedResult",
  "description": "Final merged results from multiple sub-agent task executions, providing a comprehensive view of the overall orchestration outcome with aggregated metrics.",
  "type": "object",
  "required": [
    "ok",
    "leaf_results",
    "summary",
    "aggregation_timestamp",
    "overall_token_cost"
  ],
  "properties": {
    "ok": {
      "type": "boolean",
      "description": "Whether the overall orchestration completed successfully (true if all required tasks succeeded)"
    },
    "leaf_results": {
      "type": "array",
      "description": "Array of individual TaskOutput results from all sub-agents",
      "items": {
        "type": "object",
        "required": [
          "ok",
          "task_name",
          "agent",
          "inputs",
          "outputs",
          "evidence",
          "provenance",
          "token_cost",
          "timestamp"
        ],
        "properties": {
          "ok": {
            "type": "boolean",
            "description": "Whether the task completed successfully"
          },
          "task_name": {
            "type": "string",
            "description": "Name or identifier of the task that was executed",
            "minLength": 1
          },
          "agent": {
            "type": "string",
            "description": "Identifier of the agent that executed this task",
            "minLength": 1
          },
          "inputs": {
            "description": "Input data provided to the task",
            "oneOf": [
              { "type": "object" },
              { "type": "array" },
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              { "type": "null" }
            ]
          },
          "outputs": {
            "description": "Output data produced by the task",
            "oneOf": [
              { "type": "object" },
              { "type": "array" },
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              { "type": "null" }
            ]
          },
          "evidence": {
            "type": "object",
            "description": "Evidence and artifacts supporting the task execution",
            "additionalProperties": true
          },
          "provenance": {
            "type": "object",
            "description": "Provenance information for this task",
            "required": [
              "prompt_version",
              "inputs_hash",
              "outputs_hash",
              "delegation_timestamp"
            ],
            "properties": {
              "prompt_version": { "type": "string" },
              "inputs_hash": { "type": "string" },
              "outputs_hash": { "type": "string" },
              "delegation_timestamp": { "type": "string", "format": "date-time" }
            },
            "additionalProperties": true
          },
          "token_cost": {
            "type": "object",
            "description": "Token usage for this task",
            "required": ["total_tokens"],
            "properties": {
              "total_tokens": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": true
          },
          "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp when this TaskOutput was created",
            "format": "date-time"
          },
          "error": {
            "type": "object",
            "description": "Error information if the task failed",
            "additionalProperties": true
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    },
    "summary": {
      "type": "object",
      "description": "High-level summary of the aggregated results and overall execution",
      "required": ["total_tasks", "successful_tasks", "failed_tasks"],
      "properties": {
        "total_tasks": {
          "type": "integer",
          "description": "Total number of tasks executed",
          "minimum": 0
        },
        "successful_tasks": {
          "type": "integer",
          "description": "Number of tasks that completed successfully",
          "minimum": 0
        },
        "failed_tasks": {
          "type": "integer",
          "description": "Number of tasks that failed",
          "minimum": 0
        },
        "skipped_tasks": {
          "type": "integer",
          "description": "Number of tasks that were skipped",
          "minimum": 0
        },
        "description": {
          "type": "string",
          "description": "Human-readable summary of the overall execution"
        },
        "key_findings": {
          "type": "array",
          "description": "Key findings or insights from the aggregated results",
          "items": {
            "type": "string"
          }
        },
        "recommendations": {
          "type": "array",
          "description": "Recommendations based on the execution results",
          "items": {
            "type": "string"
          }
        },
        "execution_duration_ms": {
          "type": "number",
          "description": "Total execution duration across all tasks in milliseconds",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "aggregation_timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the results were aggregated",
      "format": "date-time"
    },
    "overall_token_cost": {
      "type": "object",
      "description": "Aggregated token usage and cost metrics across all tasks",
      "required": ["total_tokens"],
      "properties": {
        "total_tokens": {
          "type": "integer",
          "description": "Total number of tokens used across all tasks",
          "minimum": 0
        },
        "input_tokens": {
          "type": "integer",
          "description": "Total number of input tokens consumed across all tasks",
          "minimum": 0
        },
        "output_tokens": {
          "type": "integer",
          "description": "Total number of output tokens generated across all tasks",
          "minimum": 0
        },
        "total_cost_usd": {
          "type": "number",
          "description": "Total estimated cost in USD across all tasks",
          "minimum": 0
        },
        "cost_breakdown": {
          "type": "array",
          "description": "Per-task cost breakdown",
          "items": {
            "type": "object",
            "required": ["task_name", "tokens", "cost_usd"],
            "properties": {
              "task_name": { "type": "string" },
              "tokens": { "type": "integer", "minimum": 0 },
              "cost_usd": { "type": "number", "minimum": 0 }
            }
          }
        }
      },
      "additionalProperties": true
    },
    "orchestration_metadata": {
      "type": "object",
      "description": "Metadata about the orchestration process itself",
      "properties": {
        "orchestrator_id": {
          "type": "string",
          "description": "Identifier of the orchestrator that managed this execution"
        },
        "orchestration_version": {
          "type": "string",
          "description": "Version of the orchestration system",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "execution_strategy": {
          "type": "string",
          "description": "Strategy used for task execution (e.g., parallel, sequential, hybrid)"
        },
        "retry_policy": {
          "type": "object",
          "description": "Retry policy applied during execution",
          "properties": {
            "max_retries": { "type": "integer", "minimum": 0 },
            "backoff_strategy": { "type": "string" }
          },
          "additionalProperties": true
        },
        "start_timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp when orchestration started",
          "format": "date-time"
        },
        "end_timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp when orchestration ended",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "errors": {
      "type": "array",
      "description": "Collection of all errors encountered during orchestration",
      "items": {
        "type": "object",
        "required": ["task_name", "error"],
        "properties": {
          "task_name": {
            "type": "string",
            "description": "Name of the task that encountered the error"
          },
          "agent": {
            "type": "string",
            "description": "Agent that encountered the error"
          },
          "error": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "message": { "type": "string" },
              "details": {
                "oneOf": [
                  { "type": "object" },
                  { "type": "string" }
                ]
              }
            },
            "additionalProperties": true
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
